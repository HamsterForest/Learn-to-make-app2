<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/kkh_love"/>
            <corners android:radius="30dp"/>
            <size android:height="70dp" android:width="200dp"/>
            <stroke android:width="3dp" android:color="#4CAF50"/>
            <gradient
                android:startColor="@color/kkh_love"
                android:centerColor="#8BC34A"
                android:endColor="#4CAF50"
                android:angle="45"/>

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="30dp"/>
            <size android:height="70dp" android:width="200dp"/>
            <stroke android:width="3dp" android:color="#673AB7"/>


        </shape>
    </item>
</selector>